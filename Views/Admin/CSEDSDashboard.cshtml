@model TutorLiveMentor.Models.CSEDSDashboardViewModel
@{
    ViewData["Title"] = "CSEDS Department Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CSEDS Department Dashboard - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1.2px;
        }

        .dashboard-header p {
            color: #666;
            font-size: 1.2em;
            margin: 0;
        }

        /* Welcome Section */
        .welcome-section {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .welcome-section h4 {
            font-weight: 700;
            margin-bottom: 10px;
        }

        /* Statistics Cards */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(249,250,242,0.95);
            border-radius: 15px;
            padding: 25px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(111, 66, 193, 0.3);
        }

        .stat-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .stat-info h6 {
            color: var(--royal-blue);
            font-weight: 600;
            margin-bottom: 5px;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-count {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--cseds-purple);
            margin: 0;
        }

        .stat-icon {
            font-size: 3em;
            color: var(--cseds-teal);
            opacity: 0.8;
        }

        /* Management Cards */
        .management-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .management-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .management-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
        }

        .management-card.faculty-card::before {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .management-card.subject-card::before {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
        }

        .management-card.report-card::before {
            background: linear-gradient(135deg, #17a2b8, #6f42c1);
        }

        .management-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 45px rgba(111, 66, 193, 0.4);
        }

        .management-icon {
            font-size: 4em;
            margin-bottom: 20px;
            display: block;
        }

        .faculty-card .management-icon { color: #28a745; }
        .subject-card .management-icon { color: #ffc107; }
        .report-card .management-icon { color: #17a2b8; }

        .management-title {
            font-size: 1.4em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 10px;
        }

        .management-desc {
            color: #666;
            font-size: 1em;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        /* Logout Controls */
        .logout-controls {
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            z-index: 100;
        }

        .logout-btn {
            background: rgba(220, 53, 69, 0.9);
            color: white;
            border: none;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
        }

        .logout-btn:hover {
            background: rgba(220, 53, 69, 1);
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            backdrop-filter: blur(4px);
        }

        .modal-content {
            background: rgba(249,250,242,0.98);
            margin: 5% auto;
            padding: 30px;
            border-radius: 20px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 15px 50px rgba(0,0,0,0.3);
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--slate);
        }

        .modal-title {
            font-size: 1.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0;
        }

        .close {
            font-size: 28px;
            font-weight: bold;
            color: #aaa;
            cursor: pointer;
            transition: color 0.3s;
        }

        .close:hover { color: #000; }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-weight: 600;
            font-size: 0.9em;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--slate);
            border-radius: 8px;
            font-size: 1em;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--cseds-purple);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 25px;
        }

        .btn-secondary {
            background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%);
        }

        .btn-secondary:hover {
            background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 25px 20px;
                margin-bottom: 25px;
            }

            .dashboard-header h1 {
                font-size: 2em;
            }

            .stats-container {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .management-container {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .stat-card, .management-card {
                padding: 20px;
            }

            .logout-controls {
                position: static;
                margin-top: 30px;
                flex-direction: row;
                justify-content: center;
            }

            .modal-content {
                width: 95%;
                margin: 10% auto;
                padding: 20px;
            }
        }

        /* Loading Animation */
        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="dashboard-header">
            <h1><i class="fas fa-chart-line"></i> CSEDS Department Dashboard</h1>
            <p>Computer Science & Engineering - Data Science Department Administration</p>
        </div>

        <!-- Welcome Section -->
        <div class="welcome-section">
            <h4><i class="fas fa-user-shield"></i> Welcome, CSEDS Department Administrator!</h4>
            <p class="mb-0">
                <strong>Email:</strong> @Model.AdminEmail | 
                <strong>Department:</strong> @Model.AdminDepartment (Data Science)
            </p>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>CSEDS Students</h6>
                        <h3 class="stat-count" id="csedsStudentsCount">@Model.CSEDSStudentsCount</h3>
                    </div>
                    <i class="fas fa-graduation-cap stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>CSEDS Faculty</h6>
                        <h3 class="stat-count" id="csedsFacultyCount">@Model.CSEDSFacultyCount</h3>
                    </div>
                    <i class="fas fa-chalkboard-teacher stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Data Science Subjects</h6>
                        <h3 class="stat-count" id="csedsSubjectsCount">@Model.CSEDSSubjectsCount</h3>
                    </div>
                    <i class="fas fa-database stat-icon"></i>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-info">
                        <h6>Active Enrollments</h6>
                        <h3 class="stat-count" id="csedsEnrollmentsCount">@Model.CSEDSEnrollmentsCount</h3>
                    </div>
                    <i class="fas fa-user-check stat-icon"></i>
                </div>
            </div>
        </div>

        <!-- Management Actions -->
        <div class="management-container">
            <!-- Faculty Management -->
            <div class="management-card faculty-card" onclick="openFacultyModal()">
                <i class="fas fa-chalkboard-teacher management-icon"></i>
                <div class="management-title">Add/Manage Faculty</div>
                <div class="management-desc">Add new CSEDS faculty members and assign them to subjects. Manage existing faculty information and their subject assignments.</div>
                <button class="glass-btn">
                    <i class="fas fa-users"></i> Manage Faculty
                </button>
            </div>

            <!-- Subject Management -->
            <div class="management-card subject-card" onclick="openSubjectModal()">
                <i class="fas fa-database management-icon"></i>
                <div class="management-title">Add/Manage Subjects</div>
                <div class="management-desc">Create new Data Science subjects with semester details. Set year, semester, and date ranges for academic planning.</div>
                <button class="glass-btn">
                    <i class="fas fa-plus"></i> Manage Subjects
                </button>
            </div>

            <!-- Reports & Analytics -->
            <div class="management-card report-card" onclick="openReportsModal()">
                <i class="fas fa-chart-bar management-icon"></i>
                <div class="management-title">View/Export Reports</div>
                <div class="management-desc">Generate detailed analytics reports with filters. Export enrollment data in Excel and PDF formats for analysis.</div>
                <button class="glass-btn">
                    <i class="fas fa-download"></i> View Reports
                </button>
            </div>
        </div>

        <!-- Recent Activity Card -->
        @if(Model.RecentStudents.Any() || Model.RecentEnrollments.Any())
        {
            <div class="stat-card" style="margin-bottom: 30px;">
                <h5 style="color: var(--royal-blue); margin-bottom: 20px;">
                    <i class="fas fa-clock"></i> Recent CSEDS Activity
                </h5>
                
                @if(Model.RecentStudents.Any())
                {
                    <h6>Recent Students:</h6>
                    <ul style="list-style: none; padding-left: 0;">
                        @foreach(var student in Model.RecentStudents.Take(3))
                        {
                            <li style="margin-bottom: 10px; padding: 8px; background: rgba(111, 66, 193, 0.1); border-radius: 5px;">
                                <strong>@student.FullName</strong> 
                                <span style="color: #666; font-size: 0.9em;">(@student.Year)</span>
                                <br><small style="color: #888;">@student.Email</small>
                            </li>
                        }
                    </ul>
                }

                @if(Model.RecentEnrollments.Any())
                {
                    <h6 style="margin-top: 20px;">Recent Enrollments:</h6>
                    <ul style="list-style: none; padding-left: 0;">
                        @foreach(var enrollment in Model.RecentEnrollments.Take(3))
                        {
                            <li style="margin-bottom: 10px; padding: 8px; background: rgba(32, 201, 151, 0.1); border-radius: 5px;">
                                <strong>@enrollment.StudentName</strong> ? 
                                <span style="color: var(--cseds-purple);">@enrollment.SubjectName</span>
                                <br><small style="color: #888;">Faculty: @enrollment.FacultyName</small>
                            </li>
                        }
                    </ul>
                }
            </div>
        }
    </div>

    <!-- Logout Controls -->
    <div class="logout-controls">
        <a href="@Url.Action("Profile", "Admin")" class="logout-btn">
            <i class="fas fa-user"></i> Profile
        </a>
        <a href="@Url.Action("Logout", "Admin")" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>

    <!-- Faculty Modal -->
    <div id="facultyModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Manage CSEDS Faculty</h2>
                <span class="close" onclick="closeFacultyModal()">&times;</span>
            </div>
            <form id="facultyForm">
                <div class="form-group">
                    <label class="form-label">Faculty Name</label>
                    <input type="text" id="facultyName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <input type="email" id="facultyEmail" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input type="password" id="facultyPassword" class="form-control" required>
                </div>
                <div class="btn-group">
                    <button type="button" class="glass-btn btn-secondary" onclick="closeFacultyModal()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="glass-btn">
                        <i class="fas fa-save"></i> Add Faculty
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Subject Modal -->
    <div id="subjectModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Manage CSEDS Subjects</h2>
                <span class="close" onclick="closeSubjectModal()">&times;</span>
            </div>
            <form id="subjectForm">
                <div class="form-group">
                    <label class="form-label">Subject Name</label>
                    <input type="text" id="subjectName" class="form-control" required>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                    <div class="form-group">
                        <label class="form-label">Year</label>
                        <select id="subjectYear" class="form-control" required>
                            <option value="">Select Year</option>
                            <option value="1">1st Year</option>
                            <option value="2">2nd Year</option>
                            <option value="3">3rd Year</option>
                            <option value="4">4th Year</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Semester</label>
                        <select id="subjectSemester" class="form-control" required>
                            <option value="">Select Semester</option>
                            <option value="Fall">Fall</option>
                            <option value="Spring">Spring</option>
                            <option value="Summer">Summer</option>
                        </select>
                    </div>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                    <div class="form-group">
                        <label class="form-label">Semester Start Date</label>
                        <input type="date" id="semesterStart" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Semester End Date</label>
                        <input type="date" id="semesterEnd" class="form-control" required>
                    </div>
                </div>
                <div class="btn-group">
                    <button type="button" class="glass-btn btn-secondary" onclick="closeSubjectModal()">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="glass-btn">
                        <i class="fas fa-save"></i> Add Subject
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Reports Modal -->
    <div id="reportsModal" class="modal">
        <div class="modal-content" style="max-width: 900px;">
            <div class="modal-header">
                <h2 class="modal-title">CSEDS Reports & Analytics</h2>
                <span class="close" onclick="closeReportsModal()">&times;</span>
            </div>
            
            <!-- Filter Section -->
            <div style="background: rgba(111, 66, 193, 0.1); padding: 20px; border-radius: 10px; margin-bottom: 20px;">
                <h5 style="color: var(--royal-blue); margin-bottom: 15px;">Report Filters</h5>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                    <div class="form-group">
                        <label class="form-label">Subject</label>
                        <select id="reportSubject" class="form-control">
                            <option value="">All Subjects</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Faculty</label>
                        <select id="reportFaculty" class="form-control">
                            <option value="">All Faculty</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Year</label>
                        <select id="reportYear" class="form-control">
                            <option value="">All Years</option>
                            <option value="1">1st Year</option>
                            <option value="2">2nd Year</option>
                            <option value="3">3rd Year</option>
                            <option value="4">4th Year</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Semester</label>
                        <select id="reportSemester" class="form-control">
                            <option value="">All Semesters</option>
                            <option value="Fall">Fall</option>
                            <option value="Spring">Spring</option>
                            <option value="Summer">Summer</option>
                        </select>
                    </div>
                </div>
                
                <div class="btn-group" style="margin-top: 15px; justify-content: flex-start;">
                    <button type="button" class="glass-btn" onclick="generateReport()">
                        <i class="fas fa-search"></i> Generate Report
                    </button>
                    <button type="button" class="glass-btn" onclick="exportExcel()" id="exportExcelBtn" disabled>
                        <i class="fas fa-file-excel"></i> Export Excel
                    </button>
                    <button type="button" class="glass-btn" onclick="exportPDF()" id="exportPdfBtn" disabled>
                        <i class="fas fa-file-pdf"></i> Export PDF
                    </button>
                </div>
            </div>

            <!-- Results Section -->
            <div id="reportResults" style="display: none;">
                <h5 style="color: var(--royal-blue); margin-bottom: 15px;">Report Results</h5>
                <div style="max-height: 400px; overflow-y: auto; border: 2px solid var(--slate); border-radius: 10px;">
                    <table style="width: 100%; border-collapse: collapse;" id="reportTable">
                        <thead style="background: var(--cseds-purple); color: white; position: sticky; top: 0;">
                            <tr>
                                <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd;">Student</th>
                                <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd;">Year</th>
                                <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd;">Subject</th>
                                <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd;">Faculty</th>
                                <th style="padding: 12px; text-align: left; border-bottom: 1px solid #ddd;">Semester</th>
                            </tr>
                        </thead>
                        <tbody id="reportTableBody">
                        </tbody>
                    </table>
                </div>
                <p id="reportCount" style="margin-top: 10px; color: #666;"></p>
            </div>
        </div>
    </div>

    <script>
        // Modal Functions
        function openFacultyModal() {
            document.getElementById('facultyModal').style.display = 'block';
        }

        function closeFacultyModal() {
            document.getElementById('facultyModal').style.display = 'none';
            document.getElementById('facultyForm').reset();
        }

        function openSubjectModal() {
            document.getElementById('subjectModal').style.display = 'block';
        }

        function closeSubjectModal() {
            document.getElementById('subjectModal').style.display = 'none';
            document.getElementById('subjectForm').reset();
        }

        function openReportsModal() {
            document.getElementById('reportsModal').style.display = 'block';
            loadReportFilters();
        }

        function closeReportsModal() {
            document.getElementById('reportsModal').style.display = 'none';
        }

        // Close modals when clicking outside
        window.onclick = function(event) {
            const facultyModal = document.getElementById('facultyModal');
            const subjectModal = document.getElementById('subjectModal');
            const reportsModal = document.getElementById('reportsModal');
            
            if (event.target === facultyModal) closeFacultyModal();
            if (event.target === subjectModal) closeSubjectModal();
            if (event.target === reportsModal) closeReportsModal();
        }

        // Faculty Management
        document.getElementById('facultyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = {
                Name: document.getElementById('facultyName').value,
                Email: document.getElementById('facultyEmail').value,
                Password: document.getElementById('facultyPassword').value,
                Department: 'CSEDS'
            };

            try {
                const response = await fetch('@Url.Action("AddCSEDSFaculty", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('Faculty added successfully!');
                    closeFacultyModal();
                    location.reload(); // Refresh to update counts
                } else {
                    alert('Error adding faculty: ' + (result.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error adding faculty. Please try again.');
            }
        });

        // Subject Management
        document.getElementById('subjectForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const startDate = new Date(document.getElementById('semesterStart').value);
            const endDate = new Date(document.getElementById('semesterEnd').value);
            
            if (endDate <= startDate) {
                alert('Semester end date must be after start date.');
                return;
            }

            const formData = {
                Name: document.getElementById('subjectName').value,
                Department: 'CSEDS',
                Year: parseInt(document.getElementById('subjectYear').value),
                Semester: document.getElementById('subjectSemester').value,
                SemesterStartDate: document.getElementById('semesterStart').value,
                SemesterEndDate: document.getElementById('semesterEnd').value
            };

            try {
                const response = await fetch('@Url.Action("AddCSEDSSubject", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('Subject added successfully!');
                    closeSubjectModal();
                    location.reload(); // Refresh to update counts
                } else {
                    alert('Error adding subject: ' + (result.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error adding subject. Please try again.');
            }
        });

        // Reports Management
        async function loadReportFilters() {
            try {
                // Load subjects for filter dropdown
                const subjectsResponse = await fetch('@Url.Action("CSEDSSystemInfo", "Admin")');
                const systemInfo = await subjectsResponse.json();
                
                // This is a simplified version - you would need separate endpoints for subjects and faculty
                console.log('System info loaded for filters');
            } catch (error) {
                console.error('Error loading filters:', error);
            }
        }

        async function generateReport() {
            const filters = {
                SelectedSubjectId: document.getElementById('reportSubject').value || null,
                SelectedFacultyId: document.getElementById('reportFaculty').value || null,
                SelectedYear: document.getElementById('reportYear').value || null,
                SelectedSemester: document.getElementById('reportSemester').value || null
            };

            try {
                const response = await fetch('@Url.Action("GenerateCSEDSReport", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(filters)
                });

                const result = await response.json();
                
                if (result.success) {
                    displayReportResults(result.data);
                    document.getElementById('exportExcelBtn').disabled = false;
                    document.getElementById('exportPdfBtn').disabled = false;
                } else {
                    alert('Error generating report');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error generating report. Please try again.');
            }
        }

        function displayReportResults(data) {
            const tbody = document.getElementById('reportTableBody');
            tbody.innerHTML = '';

            data.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td style="padding: 10px; border-bottom: 1px solid #eee;">${item.studentName}</td>
                    <td style="padding: 10px; border-bottom: 1px solid #eee;">${item.studentYear}</td>
                    <td style="padding: 10px; border-bottom: 1px solid #eee;">${item.subjectName}</td>
                    <td style="padding: 10px; border-bottom: 1px solid #eee;">${item.facultyName}</td>
                    <td style="padding: 10px; border-bottom: 1px solid #eee;">${item.semester}</td>
                `;
                tbody.appendChild(row);
            });

            document.getElementById('reportResults').style.display = 'block';
            document.getElementById('reportCount').textContent = `Total Records: ${data.length}`;
        }

        async function exportExcel() {
            // Implementation would call the ExportCSEDSReportExcel endpoint
            const filters = getCurrentFilters();
            
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportCSEDSReportExcel", "Admin")';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'filters';
            input.value = JSON.stringify(filters);
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }

        async function exportPDF() {
            // Implementation would call the ExportCSEDSReportPDF endpoint
            const filters = getCurrentFilters();
            
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("ExportCSEDSReportPDF", "Admin")';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'filters';
            input.value = JSON.stringify(filters);
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
            document.body.removeChild(form);
        }

        function getCurrentFilters() {
            return {
                SelectedSubjectId: document.getElementById('reportSubject').value || null,
                SelectedFacultyId: document.getElementById('reportFaculty').value || null,
                SelectedYear: document.getElementById('reportYear').value || null,
                SelectedSemester: document.getElementById('reportSemester').value || null
            };
        }

