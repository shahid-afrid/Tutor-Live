@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --admin-orange: #fd7e14;
            --admin-dark: #e8590c;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .glass-card {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 16px 48px var(--card-shadow);
            border-radius: 26px;
            padding: 50px 40px 40px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            max-width: 600px;
            width: 90vw;
            margin: 100px auto 0 auto;
            position: relative;
            z-index: 1;
            border: 2px solid var(--slate);
        }

        .logo {
            width: 70px;
            height: 70px;
            margin-bottom: 20px;
            filter: drop-shadow(2px 6px 18px var(--royal-blue));
            object-fit: contain;
            background: var(--cream);
            border-radius: 12px;
            padding: 6px;
        }

        h1 {
            font-size: 2.2em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 10px;
            letter-spacing: 1px;
        }

        .welcome-text {
            font-size: 1.1em;
            color: var(--admin-orange);
            margin-bottom: 30px;
            font-weight: 600;
        }

        .admin-icon {
            font-size: 3.5em;
            margin-bottom: 15px;
            color: var(--admin-orange);
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .dashboard-card {
            background: rgba(253, 126, 20, 0.1);
            border: 2px solid var(--admin-orange);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(253, 126, 20, 0.3);
            background: rgba(253, 126, 20, 0.15);
        }

        .dashboard-card h3 {
            color: var(--royal-blue);
            font-size: 1.1em;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .dashboard-card i {
            font-size: 2.5em;
            color: var(--admin-orange);
            margin-bottom: 15px;
            display: block;
        }

        .logout-btn {
            background: linear-gradient(90deg, var(--error-red), var(--admin-orange));
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 25px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 30px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .logout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.4);
            text-decoration: none;
            color: white;
        }

        @@media (max-width: 768px) {
            .glass-card {
                margin: 60px auto 0 auto;
                padding: 40px 25px 30px 25px;
            }

            h1 {
                font-size: 1.8em;
            }

            .dashboard-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="glass-card">
        <img src="~/images/RGMCET.jpg" alt="RGMCET Logo" class="logo" />
        <div class="admin-icon"><i class="fas fa-user-shield"></i></div>
        <h1>Admin Dashboard</h1>
        <div class="welcome-text">
            <i class="fas fa-crown"></i> Welcome, @ViewBag.AdminName!
        </div>

        <div class="dashboard-grid">
            <div class="dashboard-card" onclick="location.href='@Url.Action("Dashboard", "Admin")'">
                <i class="fas fa-chart-line"></i>
                <h3>System Overview</h3>
                <p>View system statistics and analytics</p>
            </div>

            <div class="dashboard-card" onclick="alert('Student Management - Coming in next update!')">
                <i class="fas fa-users"></i>
                <h3>Student Management</h3>
                <p>Manage student accounts and data</p>
            </div>

            <div class="dashboard-card" onclick="alert('Faculty Management - Coming in next update!')">
                <i class="fas fa-chalkboard-teacher"></i>
                <h3>Faculty Management</h3>
                <p>Manage faculty accounts and assignments</p>
            </div>

            <div class="dashboard-card" onclick="alert('Subject Management - Coming in next update!')">
                <i class="fas fa-book"></i>
                <h3>Subject Management</h3>
                <p>Manage subjects and course structure</p>
            </div>

            <div class="dashboard-card" onclick="alert('Reports & Analytics - Coming in next update!')">
                <i class="fas fa-file-alt"></i>
                <h3>Reports & Analytics</h3>
                <p>Generate detailed system reports</p>
            </div>

            <div class="dashboard-card" onclick="alert('System Settings - Coming in next update!')">
                <i class="fas fa-cogs"></i>
                <h3>System Settings</h3>
                <p>Configure application settings</p>
            </div>
        </div>

        <a href="@Url.Action("Logout", "Admin")" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>
</body>
</html>